{
  "version": 2,
  "builds": [
    { "src": "api/lineup.py", "use": "@vercel/python" },
    { "src": "api/transaction.py", "use": "@vercel/python" },
    { "src": "web/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(lineup|transaction)",
      "methods": ["OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    { "src": "/api/lineup", "dest": "/api/lineup.py" },
    { "src": "/api/transaction", "dest": "/api/transaction.py" },
    { "src": "/(.*)", "dest": "/web/$1" }
  ]
}

